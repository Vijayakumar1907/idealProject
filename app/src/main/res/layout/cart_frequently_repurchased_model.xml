<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/RepurchaseMain_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="fitCenter"

            android:src="@drawable/today_deal_four"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/Repuchase_mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:text="GeeRic Protective Cover Compatible."/>

    <ImageView
        android:id="@+id/RatingBar"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_rating"
        android:layout_height="20dp"
        />
    <TextView
        android:id="@+id/Repurchase_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:text="$ 200.00"
        android:layout_marginTop="4dp"
        android:textColor="@color/red"/>
    <TextView
        android:id="@+id/Repurchase_AddtoCart"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Add to Cart"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:background="@drawable/repuchased_backbutton"/>


</LinearLayout>